				if (!user) {
				  window.netlifyIdentity.on("login", () => {
					document.location.href = "/admin/";
				  });
				}
			  });
			}
			
			// Helper functions for different actions
			function openModal() {
				const modal = document.getElementById('modal');
				if (modal) {
					modal.style.display = 'flex';
					// Add event listener for clicking outside modal
					document.addEventListener('click', closeOnClickOutside);
					// Update URL to show modal state
					history.pushState({modal: 'open'}, '', window.location.pathname + '#contact-modal');
				}
			}

			function closeModal() {
				document.getElementById('modal').style.display = 'none';
				// Remove event listener when modal is closed
				document.removeEventListener('click', closeOnClickOutside);
				// Update URL to remove modal state
				if (window.location.hash === '#contact-modal') {
					history.pushState({modal: 'closed'}, '', window.location.pathname);
				}
			}

			function closeOnClickOutside(event) {
				var modal = document.getElementById('modal');
				var modalContent = document.getElementById('modal-content');
				if (modal.style.display === 'flex' && !modalContent.contains(event.target) && event.target !== document.querySelector('.button.primary.large')) {
					closeModal();
				}
			}

			function makeCall() {
				window.location.href = 'tel:+18019896386';
				closeModal();
			}

			function sendText() {
				var message = "Hi Sandi! My name is [Your Name], and I'd like to connect.";
				window.location.href = 'sms:+18019896386?body=' + encodeURIComponent(message);
				closeModal();
			}

			// Helper functions for FAQ links
			function openCallModal() {
				openModal();
				return false; // Prevent default link behavior
			}

			function openCallModalDirect() {
				// Navigate to the modal URL directly
				window.location.hash = '#contact-modal';
				return false; // Prevent default link behavior
			}

			function scrollToContact() {
				document.getElementById('contact-form').scrollIntoView({behavior: 'smooth'});
				return false; // Prevent default link behavior
			}
			
			// Form functionality
			document.addEventListener('DOMContentLoaded', function() {
				const babyStatus = document.getElementById('baby-status');
				const dueDateField = document.querySelector('.due-date-field');
				const birthDateField = document.querySelector('.birth-date-field');
				
				if (babyStatus) {
					babyStatus.addEventListener('change', function() {
						if (this.value === 'pregnant') {
							dueDateField.classList.remove('hidden');
							birthDateField.classList.add('hidden');
						} else if (this.value === 'born') {
							dueDateField.classList.add('hidden');
							birthDateField.classList.remove('hidden');
						} else {
							dueDateField.classList.add('hidden');
							birthDateField.classList.add('hidden');
						}
					});
				}
			});

			// FAQ Accordion functionality
			document.addEventListener('DOMContentLoaded', function() {
				const faqItems = document.querySelectorAll('.faq-accordion .faq-item');
				faqItems.forEach(item => {
					const question = item.querySelector('.faq-question');
					const answer = item.querySelector('.faq-answer');
					const toggle = item.querySelector('.faq-toggle');
					if (question && answer && toggle) {
						question.addEventListener('click', function() {
							const isActive = item.classList.contains('active');
							faqItems.forEach(i => i.classList.remove('active'));
							if (!isActive) {
								item.classList.add('active');
							}
						});
					}
				});

				// Check if modal should be open on page load (from direct link)
				if (window.location.hash === '#contact-modal') {
					openModal();
				}
			});

			// Handle browser back/forward buttons
			window.addEventListener('popstate', function(event) {
				if (window.location.hash === '#contact-modal') {
					openModal();
				} else {
					closeModal();
				}
			});
		  </script>
