		<!-- Sidebar Toggle and Sidebar -->
		{% include "../_components/sidebar.njk" %}

		<!-- Wrapper -->
		<div id="wrapper">

			{% include "../_components/callnow.njk" %}

			<!-- Main -->
			<div id="main">
				<div class="inner">

					{% include "../_components/header.njk" %}
					
					<div class="blog-post-wrapper">
						<!-- Blog Header -->
						<header class="blog-header">
							<h1>{{ title }}</h1>
							<div class="blog-meta">
								<span class="date">{{date | customDateFormat("medium")}}</span>
								{% if tags %}
								<span class="tags">
									{% for tag in tags %}
									<span class="tag">{{ tag }}</span>
									{% endfor %}
								</span>
								{% endif %}
							</div>
							{% if thumbnail %}
							<img src="{{ thumbnail }}" alt="{{title}}" class="blog-featured-image">
							{% endif %}
						</header>
						
						<!-- Blog Content -->
						<article class="blog-content">
							{{content | safe}}
						</article>
						
						<!-- Navigation -->
						<nav class="blog-navigation">
							<a href="/blog" class="blog-button back-button">
								<i class="fas fa-arrow-left"></i> Back to Blog
							</a>
						</nav>
						
						<!-- Related Posts -->
						<section class="related-posts">
							<h2>More Adoption Resources</h2>
							<div class="related-grid">
								{% set count = 0 %}
								{% for post in collections.blogPosts | reverse %}
								{% if count < 3 and post.data.tags.includes("adoption") and post.url != page.url %}
								<article class="related-post">
									<a href="{{ post.url }}">
										<img src="{{ post.data.thumbnail }}" alt="{{post.data.title}}">
									</a>
									<div class="related-post-content">
										<div class="related-post-date">
											{{ post.data.date | customDateFormat("medium") }}
										</div>
										<h3 class="related-post-title">
											<a href="{{ post.url }}">{{ post.data.title }}</a>
										</h3>
										<p class="related-post-excerpt">
											{{post.data.excerpt | truncate(120)}}
										</p>
										<a href="{{ post.url }}" class="read-more-link">Read Full Article →</a>
									</div>
								</article>
								{% set count = count + 1 %}
								{% endif %}
								{% endfor %}
							</div>
						</section>
					</div>
				</div>
			</div>

		</div>
		
		<!-- Scripts -->
