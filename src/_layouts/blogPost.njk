<html lang="en">
	<head>
		<title>{{ title }} | Brighter Adoptions Blog</title>
		<meta charset="utf-8" />
		<meta name="description" content="{{excerpt}}">
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes" />
		
		<!-- SEO Meta Tags -->
		<meta name="author" content="Brighter Adoptions">
		<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">
		<meta name="language" content="en">
		<meta name="revisit-after" content="7 days">
		<meta name="distribution" content="global">
		
		<!-- Keywords from post tags -->
		{% if tags %}
		<meta name="keywords" content="{{ tags.join(', ') }}, adoption, birth mother support, adoption agency Utah">
		{% else %}
		<meta name="keywords" content="adoption, birth mother support, adoption agency Utah, adoption resources">
		{% endif %}
		
		<!-- Canonical URL -->
		<link rel="canonical" href="https://brighteradoption.com{{ page.url }}" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="article" />
		<meta property="og:title" content="{{ title }}" />
		<meta property="og:description" content="{{excerpt}}" />
		<meta property="og:image" content="{{ thumbnail }}" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:url" content="https://brighteradoption.com{{ page.url }}" />
		<meta property="og:site_name" content="Brighter Adoptions" />
		<meta property="og:locale" content="en_US" />
		<meta property="article:published_time" content="{{ date | dateIso }}" />
		<meta property="article:modified_time" content="{{ date | dateIso }}" />
		<meta property="article:author" content="Brighter Adoptions" />
		{% if tags %}
		<meta property="article:tag" content="{{ tags.join(', ') }}" />
		{% endif %}
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:title" content="{{ title }}" />
		<meta property="twitter:description" content="{{excerpt}}" />
		<meta property="twitter:image" content="{{ thumbnail }}" />
		<meta property="twitter:url" content="https://brighteradoption.com{{ page.url }}" />
		<meta property="twitter:site" content="@BrighterAdoption" />
		
		<!-- Article Schema -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "BlogPosting",
			"headline": "{{ title }}",
			"description": "{{excerpt}}",
			"image": "{{ thumbnail }}",
			"author": {
				"@type": "Organization",
				"name": "Brighter Adoptions",
				"url": "https://brighteradoption.com"
			},
			"publisher": {
				"@type": "Organization",
				"name": "Brighter Adoptions",
				"logo": {
					"@type": "ImageObject",
					"url": "https://brighteradoption.com/assets/images/Logo.jpg",
					"width": 200,
					"height": 200
				}
			},
			"datePublished": "{{ date | dateIso }}",
			"dateModified": "{{ date | dateIso }}",
			"mainEntityOfPage": {
				"@type": "WebPage",
				"@id": "https://brighteradoption.com{{ page.url }}"
			},
			"url": "https://brighteradoption.com{{ page.url }}",
			{% if tags %}
			"keywords": "{{ tags.join(', ') }}",
			{% endif %}
			"articleSection": "Adoption Resources",
			"inLanguage": "en-US",
			"isAccessibleForFree": true
		}
		</script>
		
		<!-- Breadcrumb Schema -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "BreadcrumbList",
			"itemListElement": [
				{
					"@type": "ListItem",
					"position": 1,
					"name": "Home",
					"item": "https://brighteradoption.com"
				},
				{
					"@type": "ListItem",
					"position": 2,
					"name": "Blog",
					"item": "https://brighteradoption.com/blog"
				},
				{
					"@type": "ListItem",
					"position": 3,
					"name": "{{ title }}",
					"item": "https://brighteradoption.com{{ page.url }}"
				}
			]
		}
		</script>
		
		<!-- Preconnect for performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="dns-prefetch" href="//fonts.googleapis.com">
		
		<!-- Preload critical resources -->
		<link rel="preload" href="/assets/css/main.css" as="style">
		<link rel="preload" href="/assets/css/fontawesome-all.min.css" as="style">
		
		<!-- CSS -->
		<link rel="stylesheet" href="/assets/css/main.css">
		<link rel="stylesheet" href="/assets/css/fontawesome-all.min.css">
		
		<!-- Favicon -->
		<link rel="icon" type="image/x-icon" href="/assets/images/LogoHeart.jpg">
		<link rel="apple-touch-icon" sizes="180x180" href="/assets/images/LogoHeart.jpg">
