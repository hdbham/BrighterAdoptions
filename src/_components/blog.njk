---
pagination:
  data: collections.generalBlogPosts
  size: 5
  alias: posts
---


<section data-section-id="1" data-share="" data-category="blog" data-component-id="2d4a0295_01_awz" class="is-relative section py-20 snipcss-kdSzP style-STMMY" id="style-STMMY">

  {# <img class="is-absolute is-left-0 is-top-0 mt-24 is-hidden-touch" src="https://shuffle.dev/zeus-assets/icons/dots/blue-dot-left-bars.svg" alt="" data-config-id="auto-img-1-1"> #}
  {# <img class="is-absolute is-right-0 is-top-0 mt-52 is-hidden-touch" src="https://shuffle.dev/zeus-assets/icons/dots/yellow-dot-right-shield.svg" alt="" data-config-id="auto-img-2-1"> #}
  <div class="container">
   
    {# newest blog post gets this styling #}
    {% for post in posts %}
    {% if loop.index == 1 %}

    <div class="columns is-multiline">
      <div class="column is-8 mb-16">
        <div class="mb-10">
          <a href="{{post.url}}">
            <img class="image is-fullwidth is-cover is-rounded style-YMUm2" src="{{ post.data.thumbnail }}" aria-label="{{post.data.title}}" data-config-id="image1" id="style-YMUm2">
          </a>
        </div>
        <span class="is-inline-block mb-4 has-text-grey-dark" data-config-id="date1">
          {{ post.data.date | customDateFormat("medium") }}{{post.data.tags}}
        </span>
        <h2 class="mb-4 title is-3" data-config-id="{{ post.data.title }}">
          {{ post.data.title }}
        </h2>
        <p class="mb-8 is-size-5 has-text-grey-dark" data-config-id="desc1">
          {{ post.data.excerpt }}        </p>
          <a class="is-size-6" href="{{post.url}}" data-config-id="action">
            Read more
          </a>
  
      </div>
      {% else %}
      {# others like this but i need to exclude the newest because it is above#}
      <div class="column is-4 mb-16">
        <div class="mb-10">
          <a href="{{post.url}}">
          <img class="image is-fullwidth is-cover is-rounded style-koYgp" src="{{ post.data.thumbnail }}" aria-label="{{post.data.title}}"data-config-id="image2" id="style-koYgp">
            </a>
        </div>
        <span class="is-inline-block mb-4 has-text-grey-dark" data-config-id="date2">
          {{ post.data.date | customDateFormat("medium") }}

        </span>
        <h2 class="mb-4 title is-3" data-config-id="{{ post.data.title }}">
          {{ post.data.title }}   
        </h2>
        <p class="mb-8 is-size-5 has-text-grey-dark" data-config-id="desc2">
          {{post.data.excerpt | truncate(140)}}
        </p>
        <a class="is-size-6" href="{{post.url}}" data-config-id="action">
          Read more
        </a>
      </div>
      {% endif %}
      {% endfor %}

      <div class="pagination">
        {% if blog.href.previous %}
          <a href="{{ blog.href.previous }}">Previous Page</a>
        {% endif %}
  
        Page {{ blog.pageNumber }} of {{ blog.totalPages }}
  
        {% if blog.href.next %}
          <a href="{{ blog.href.next }}">Next Page</a>
        {% endif %}
      </div>

    </div>
  </div>
</section>
