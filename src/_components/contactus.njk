<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Contact Us</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap');

        .contact-container {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            font-family: 'Indie Flower', cursive; /* Applying the signature font */
        }

        .contact-container h2 {
            font-size: 2.5em;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            font-size: 1.2em;
            margin-bottom: 5px;
        }

        input, select {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 1em;
        }

        input[type="submit"] {
            background-color: #fff;
            color: #222;
            cursor: pointer;
        }

        .map-container {
            margin-top: 20px;
            position: relative;
            overflow: hidden;
            padding-bottom: 56.25%; /* Aspect ratio 16:9 */
            height: 0;
        }

        .map-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }

        .due-date {
            display: none;
        }
    </style>
</head>
<body>
    <div class="contact-container">
        <h2>Let's talk!</h2>

        <form action="#" method="post">
            <label for="name">Hi, Sandi! my name is</label>
            <input type="text" id="name" name="name" placeholder="Type here" oninput="updateGreeting()">
            <label for="client-type">I am a</label>
            <select id="client-type" name="client-type">
                <option value=""></option>
                <option value="mom">Expectant Mother</option>
                <option value="family">Parent looking to adopt</option>
            </select>
            <div class="due-date">
                <label for="due-date">my expected Due Date is around</label>
                <input type="date" id="due-date" name="due-date">
            </div>
            <label for="looking">and I have questions about</label>
            <input type="looking" id="looking" name="looking" placeholder="Ask us anything!">

            <label for="contact">Get in touch with me at:</label>
            <input type="contact" id="contact" name="contact" placeholder="Your phone or email here">

            <label> Thank you! <br> <span id="greetingName">-</span></label>

            {# <input type="checkbox" id="newsletter" name="newsletter">
            <label for="newsletter">Subscribe to newsletter</label> #}
            <br>
            <input type="submit" value="Send message!">
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form[data-netlify="true"]');
            form.addEventListener('submit', function(event) {
                event.preventDefault();
                fetch('/', {
                    method: 'POST',
                    body: new FormData(form)
                })
                .then(() => {
                    // Show success message or redirect to a thank you page
                    alert('Thank you for your message! We will be in contact soon.');
                    // window.location.href = 'thankyou.html'; // Uncomment to redirect to a thank you page
                })
                .catch(error => console.error('Error:', error));
            });
        });
        
           document.getElementById('client-type').addEventListener('change', function() {
            var dueDateField = document.querySelector('.due-date');
            if (this.value === 'mom') {
                dueDateField.style.display = 'block';
            } else {
                dueDateField.style.display = 'none';
            }
        });
        // Update greeting with the name input
        function updateGreeting() {
            var nameInput = document.getElementById('name');
            var greeting = document.getElementById('greetingName');
            greeting.textContent = nameInput.value;
        }

        // Automatically populate name input with stored name
        window.onload = function() {
            var storedName = localStorage.getItem('storedName');
            var nameInput = document.getElementById('name');
            if (storedName) {
                nameInput.value = storedName;
                updateGreeting(); // Update greeting if name is pre-filled
            }
        };

        // Store the entered name locally
        document.getElementById('name').addEventListener('input', function() {
            var name = this.value;
            localStorage.setItem('storedName', name);
        });
    </script>
</body>
</html>
